<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!-- Ana Sayfa Fragment -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.foodapp.ui.main.MainFragment"
        android:label="MainFragment">

        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

        <action
            android:id="@+id/action_mainFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <!-- Detay Sayfası -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.foodapp.ui.detail.DetailFragment"
        android:label="DetailFragment" />

    <!-- Sepet Sayfası -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.foodapp.ui.cart.CartFragment"
        android:label="CartFragment" />

</navigation>
